<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/layout_search_cls"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/icon_search_cls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_search" />

    <ImageView
        android:id="@+id/icon_yuyin_cls"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/search_yuyin" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/icon_yuyin_cls"
        android:layout_toRightOf="@id/icon_search_cls"
        android:gravity="center_vertical"
        android:text="搜索" />

</RelativeLayout>