<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.vstecs.android.uiframework.view.jazzyviewpage.JazzyViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.vstecs.android.uiframework.view.jazzyviewpage.JazzyViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider" />

    <android.support.v4.view.CustomIndicatorLinearLayout
        android:id="@+id/page_indicator"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_gravity="bottom"
        android:background="#2F2D2B" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_icon_index"
                style="@style/main_tab_icon"
                android:src="@drawable/selector_main_tab_index" />

            <TextView
                style="@style/main_tab_tv"
                android:layout_below="@+id/tab_icon_index"
                android:text="@string/common_index" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_icon_message"
                style="@style/main_tab_icon"
                android:src="@drawable/selector_main_tab_message" />

            <TextView
                style="@style/main_tab_tv"
                android:layout_below="@+id/tab_icon_message"
                android:text="@string/common_discover" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_icon_contacts"
                style="@style/main_tab_icon"
                android:src="@drawable/selector_main_tab_contacts" />

            <TextView
                style="@style/main_tab_tv"
                android:layout_below="@+id/tab_icon_contacts"
                android:text="@string/common_cart" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_icon_myinfo"
                style="@style/main_tab_icon"
                android:src="@drawable/selector_main_tab_myinfo" />

            <TextView
                style="@style/main_tab_tv"
                android:layout_below="@+id/tab_icon_myinfo"
                android:text="@string/common_me" />
        </RelativeLayout>
    </android.support.v4.view.CustomIndicatorLinearLayout>

</LinearLayout>